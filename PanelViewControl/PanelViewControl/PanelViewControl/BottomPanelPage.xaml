<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:PanelViewControl.Control"
             x:Class="PanelViewControl.BottomPanelPage">
    
    <ContentPage.Content>
        <controls:PanelViewControl BottomPanelFloatSpacing="70"
                                   LeftPanelRatio="0.4"
                                   TopPanelRatio="0.5"
                                   RightPanelRatio="0.6"
                                   BottomPanelRatio="0.5"
                                   IsBottomPannelOverlayed="True">


            <controls:PanelViewControl.BottomView>
                <ContentView BackgroundColor="OrangeRed"
                             Opacity="0.7" />
            </controls:PanelViewControl.BottomView>

        </controls:PanelViewControl>

    </ContentPage.Content>
</ContentPage>