<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PanelViewSample.Views.MainPage"
             Title="{Binding Title}">

    <ScrollView>
        
        <StackLayout>
            
            <Button Text="Left Panel Page"
                    Command="{Binding NavigateToLeftPanelPageCommand}" />

            <Button Text="Top Panel Page"
                    Command="{Binding NavigateToTopPanelPageCommand}" />

            <Button Text="Right Panel Page"
                    Command="{Binding NavigateToRightPanelPageCommand}" />

            <Button Text="Bottom Panel Page"
                    Command="{Binding NavigateToBottomPanelPageCommand}" />

            <Button Text="Multi-Directional Panel Page"
                    Command="{Binding NavigateToMultiDirectionalPanelPageCommand}" />

            <Button Text="Multi-Directional Single-Active Panel Page"
                    Command="{Binding NavigateToMultiDirectionalSingleActivePanelPageCommand}" />

            <Button Text="Multi-Directional Full Panels Page"
                    Command="{Binding NavigateToMultiDirectionalFullPanelPageCommand}" />

        </StackLayout>
    </ScrollView>

</ContentPage>